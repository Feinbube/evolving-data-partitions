<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my1="clr-namespace:DataFieldLayoutSimulation"
        xmlns:EvolutionWpfControls="clr-namespace:EvolutionWpfControls;assembly=EvolutionWpfControls" x:Class="DataFieldLayoutSimulation.MainWindow"
        Title="Data Access Layout Simulator" Width="1280" Height="768" Closing="Window_Closing">
    <Grid>
        <TabControl>
            <TabItem Header="New">
                <ScrollViewer>
                    <EvolutionWpfControls:AnyPopulationControl x:Name="evolutionControlNew" Margin="0,0,0,0"/>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Traditional">
                <ScrollViewer>
                    <EvolutionWpfControls:EvolutionControl x:Name="evolutionControl" Margin="0,0,0,0"/>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
